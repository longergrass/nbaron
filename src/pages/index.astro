---
import { Card } from '../components/Card';
import { EmailSubscription } from '../components/EmailSubscription';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <meta name='color-scheme' content='dark' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>nbaron</title>
  </head>
  <body class='pt-7 pb-5 min-h-screen flex flex-col justify-between'>
    <div class='flex flex-col flex-1 pb-12'>
      <a class='px-7 text-gray-100 font-medium text-2xl' href='/'>nbaron</a>
      <div class='flex flex-col justify-between flex-1'>
        <main class='flex flex-col gap-0 mx-7 md:mx-auto md:w-3/4'>
          <section class='mt-14'>
            <div class='flex flex-col gap-4 text-gray-900'>
              <h1 class='text-2xl text-gray-900 font-medium md:text-4xl'>
                Hi, I'm Noah
              </h1>
              <div class='flex flex-col text-lg'>
                <p>I'm a software engineer and student.</p>
                <p>
                  I like to build things that are fun, useful, and make the
                  world a better place.
                </p>
              </div>

              <p class='text-lg'>
                Want to support me?{' '}
                <a
                  class='underline'
                  target='_blank'
                  href='https://buymeacoffee.com/noahbaron'
                >
                  Buy me a coffee
                </a>
              </p>
            </div>
          </section>
          <section class='my-8 flex-col flex gap-2'>
            <h3 class='text-lg text-gray-950 font-medium'>Projects</h3>
            <div class='flex gap-3 flex-col sm:flex-row'>
              <div class='flex-1 flex flex-col gap-3'>
                <Card
                  domain='onlyvisitonce.com'
                  githubURL='https://github.com/nbaron1/onlyvisitonce'
                  title='A website you can only visit once'
                  url='https://onlyvisitonce.com/'
                  client:load
                />
                <Card
                  domain='counttoamillion.com'
                  githubURL={null}
                  title='A website won by the first person to count to a million'
                  url='https://counttoamillion.com/'
                  client:load
                />
                <Card
                  domain='robotsblogging.com'
                  githubURL='https://github.com/nbaron1/robotsblogging'
                  title='A blog generated by user AI prompts'
                  url='https://robotsblogging.com/'
                  client:load
                />
              </div>
              <div class='flex-1 flex flex-col gap-3'>
                <Card
                  domain='brain-tumor.nbaron.com'
                  githubURL='https://github.com/nbaron1/detect-cancer'
                  title='Detect & classify brain tumors with AI'
                  url='https://brain-tumor.nbaron.com'
                  client:load
                />
                <Card
                  domain='visitarandomwebsite.com'
                  githubURL='https://github.com/nbaron1/visitarandomwebsite'
                  title='A website that redirects you to a random site'
                  url='https://visitarandomwebsite.com/'
                  client:load
                />

                <Card
                  domain='skin-cancer.nbaron.com'
                  githubURL='https://github.com/nbaron1/detect-cancer'
                  title='Detect melanoka skin cancer with AI'
                  url='https://skin-cancer.nbaron.com'
                  client:load
                />
              </div>
            </div>
          </section>
        </main>
      </div>
      <section
        class='mx-7 md:mx-auto md:w-3/4 mt-8 lg:flex-row lg:justify-between bg-gray-900 lg:items-center border flex flex-col gap-4 px-5 min-[500px]:px-7 py-7 border-gray-500 bg-gray-600 rounded-xl'
      >
        <div class='flex flex-col gap-1'>
          <h4 class='text-gray-50 font-medium text-lg'>Subscribe</h4>
          <p class='text-gray-200'>Get notified when I launch a new project</p>
        </div>
        <EmailSubscription client:load />
      </section>
    </div>
    <footer
      class='flex sm:items-center gap-4 px-7 justify-between text-gray-200 flex-col sm:flex-row items-start'
    >
      <p>
        Send me an email at <a href='mailto:noah@nbaron.com' class='underline'>
          noah@nbaron.com
        </a>
      </p>
      <div class='flex items-center gap-3'>
        <a
          href='https://github.com/nbaron1'
          target='_blank'
          class='text-gray-200'
        >
          GitHub
        </a>
        <a
          href='https://x.com/noahthebaron'
          target='_blank'
          class='text-gray-200'
        >
          Twitter
        </a>
      </div>
    </footer>
  </body>
</html>
